{
  "name": "graphfinity",
  "version": "1.0.0",
  "description": "Graphfinity is the D3.js based reusable chart library. It has Cross-browser compatibility and each chart of this library is fully or configurable to perfectly match the look and feel of your website.",
  "main": "./lib/index.js",
  "types": "./lib/types/index.d.ts",
  "type": "module",
  "scripts": {
    "bootstrap": "npm install",
    "dev": "webpack-dev-server --config webpack.config.js",
    "build": "npm run build:dist && npm run build:module",
    "build:dist": "webpack --config webpack.config.js --env production",
    "build:module": "npx tsc && tsc-alias"
  },
  "keywords": [
    "Graphfinity"
  ],
  "author": "Rupinder Singh",
  "license": "MIT",
  "dependencies": {
    "d3": "^7.9.0"
  },
  "devDependencies": {
    "@types/d3": "^7.4.3",
    "@types/node": "^20.12.12",
    "ts-loader": "^9.5.1",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "typescript": "^5.4.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  }
}
